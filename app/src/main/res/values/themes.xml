<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>

        <item name="android:background">@color/purple</item>

        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/literata_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.AppCompat.TextView.CenteredWithPaddings">
        <item name="android:gravity">center</item>
        <item name="android:padding">7dp</item>
    </style>
    <style name="Widget.AppCompat.TextView.H1" parent="Widget.AppCompat.TextView.CenteredWithPaddings">
        <item name="android:fontFamily">@font/literata_extrabold</item>
        <item name="android:textSize">44sp</item>
    </style>
    <style name="Widget.AppCompat.TextView.H2" parent="Widget.AppCompat.TextView.CenteredWithPaddings">
        <item name="android:fontFamily">@font/literata_bold</item>
        <item name="android:textSize">27sp</item>
    </style>
    <style name="Widget.AppCompat.TextView.H3" parent="Widget.AppCompat.TextView.CenteredWithPaddings">
        <item name="android:fontFamily">@font/literata_medium</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Widget.AppCompat.TextView.H4" parent="Widget.AppCompat.TextView.CenteredWithPaddings">
        <item name="android:fontFamily">@font/literata_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="Widget.AppCompat.TextView.H3_not_centered" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/literata_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/pink</item>
    </style>


    <style name="Widget.AppCompat.TextView.TextClock" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/literata_semibold</item>
    </style>

    <style name="Widget.AppCompat.TextView.H5" parent="Widget.AppCompat.TextView.CenteredWithPaddings">
        <item name="android:fontFamily">@font/literata_regular</item>
        <item name="android:textSize">11sp</item>
    </style>
</resources>
