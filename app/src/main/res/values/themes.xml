<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/literata_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.AppCompat.TextView.CenteredWithPaddings">
        <item name="android:gravity">center</item>
        <item name="android:padding">7dp</item>
    </style>
    <style name="Widget.AppCompat.TextView.H1" parent="Widget.AppCompat.TextView.CenteredWithPaddings">
        <item name="fontFamily">@font/literata_extrabold</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="Widget.AppCompat.TextView.H2" parent="Widget.AppCompat.TextView.CenteredWithPaddings">
        <item name="fontFamily">@font/literata_bold</item>
        <item name="android:textSize">27sp</item>
    </style>
    <style name="Widget.AppCompat.TextView.H3" parent="Widget.AppCompat.TextView.CenteredWithPaddings">
        <item name="fontFamily">@font/literata_medium</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>
